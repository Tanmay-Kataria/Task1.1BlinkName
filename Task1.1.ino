// Define dot and dash durations (adjust as needed)
const int dotDuration = 200;
const int dashDuration = dotDuration * 3;
const int interDotDashDuration = dotDuration;
const int letterGapDuration = dotDuration * 3;
const int wordGapDuration = dotDuration * 7;
  
int BUTTON_PIN = 3;

const char *morseCode[] = {".-", "-...", "-.-.", "-..", ".", "..-.", "--.", "....", "..", ".---", "-.-", ".-..", "--", "-.", "---", ".--.", "--.-", ".-.", "...", "-", "..-", "...-", ".--", "-..-", "-.--", "--.."};

void dot() {
  digitalWrite(LED_BUILTIN, HIGH);
  delay(dotDuration);
  digitalWrite(LED_BUILTIN, LOW);
  delay(interDotDashDuration);
}

void dash() {
  digitalWrite(LED_BUILTIN, HIGH);
  delay(dashDuration);
  digitalWrite(LED_BUILTIN, LOW);
  delay(interDotDashDuration);
}

void generateMorseCode(char c) {
  int index = c - 'A';
  if (index >= 0 && index < 26) {
    for (int i = 0; morseCode[index][i] != '\0'; i++) {
      if (morseCode[index][i] == '.') {
        dot();
      } else if (morseCode[index][i] == '-') {
        dash();
      }
    }
    delay(letterGapDuration);
  }
}


